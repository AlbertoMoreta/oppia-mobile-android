<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/badges_row"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/badges_datetime"
        android:layout_width="80dp"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/badges_time"
            style="@style/SmallTextDark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/badges_date"
            style="@style/SmallTextDark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/badges_time"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingRight="5dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/badges_description"
        style="@style/SmallTextDark"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/badges_datetime" />

</RelativeLayout>